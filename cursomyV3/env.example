# ========================================
# CURSOSMY V3 - VARIABLES DE ENTORNO
# PROYECTO COMPLETAMENTE INDEPENDIENTE
# ========================================

# ENTORNO
NODE_ENV=development
PORT=3001

# BASE DE DATOS (INDEPENDIENTE)
DB_PATH=./database/cursomyv3.db
DB_MIGRATIONS_PATH=./database/migrations
DB_SEEDERS_PATH=./database/seeders

# AUTENTICACIÓN
JWT_SECRET=cursomyv3-super-secret-key-2025
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# UPLOADS (CONFIGURACIÓN INDEPENDIENTE)
UPLOAD_MAX_SIZE=1073741824000
UPLOAD_DIR=./backend/uploads
TEMP_DIR=./backend/temp
THUMBNAILS_DIR=./backend/uploads/thumbnails
RESOURCES_DIR=./backend/uploads/resources

# REDIS (OPCIONAL)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# FFMPEG
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_THUMBNAIL_TIME=00:00:10

# SEGURIDAD
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# LOGGING
LOG_LEVEL=info
LOG_FILE=./logs/cursomyv3.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# COMPRESIÓN
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# WEBSOCKETS
WS_PORT=3002
WS_PATH=/socket.io

# BACKUP
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=1
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# MONITORING
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
